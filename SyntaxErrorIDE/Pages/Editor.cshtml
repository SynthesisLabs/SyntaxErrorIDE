@page
@model SyntaxErrorIDE.Pages.Editor

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="nl">
<head>
    <title>Syntax Error IDE</title>
    <style>
        .file-manager {
            padding: 10px;
            background-color: #f5f5f5;
            border: 1px solid #ddd;
            margin-bottom: 10px;
        }

        #file-explorer {
            margin-bottom: 10px;
            max-height: 200px;
            overflow-y: auto;
        }

        #file-explorer div:hover {
            background-color: #e0e0e0;
        }

        .file-manager button {
            margin-right: 10px;
            padding: 5px 10px;
            color: white;
            border: none;
            cursor: pointer;
        }

        #new-filename {
            padding: 5px;
            margin-right: 10px;
            width: 200px;
        }
        
        .editor-container {
            display: flex;
            font-family: monospace;
            font-size: 14px;
            height: 80vh;
            margin: 20px 0;
            border: 1px solid #ccc;
        }

        .line-numbers {
            width: 30px;
            background-color: #f0f0f0;
            text-align: right;
            padding: 5px 5px 20px 5px;
            overflow-y: hidden;
            user-select: none;
            line-height: 1.5rem;
            white-space: pre;
        }

        .editor-textarea {
            flex: 1;
            padding: 5px;
            resize: none;
            border: none;
            outline: none;
            overflow-x: scroll;
            line-height: 1.5rem;
            white-space: pre;
            word-wrap: normal;
        }
        
    </style>
</head>
<body>
<div class="file-manager">
    <p id="file-explorer"></p>
    <button id="save-btn">Opslaan</button>
    <input type="text" id="new-filename" placeholder="Nieuw bestandsnaam">
    <button id="create-btn">Nieuw bestand</button>
</div>

<div class="editor-container">
    <div class="line-numbers" id="line-numbers">1</div>
    <textarea class="editor-textarea" id="code-editor" spellcheck="false"></textarea>
</div>

<script src="js/editor/lineNumbers.js"> </script>
<script src="js/editor/File.js"> </script>
</body>
</html>